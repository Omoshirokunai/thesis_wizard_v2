{
    "configurations": [
        {
            "type": "debugpy",
            "request": "launch",
            "name": "Launch App",
            "program": "${workspaceFolder}/${input:programPath}",
            "python": "${workspaceFolder}/.venv/bin/python"
        }
    ],
    "inputs": [
        {
            "type": "promptString",
            "id": "programPath",
            "description": "Enter the path to your Python file"
        }
    ]
}